group("background") {
  testonly = true
  deps = [
    ":lib",
    ":main",
  ]
}

source_set("lib") {
  sources = [
    "background_shell.cc",
    "background_shell.h",
  ]
  deps = [
    "//base",
    "//mojo/message_pump",
    "//mojo/services/package_manager:lib",
    "//mojo/shell",
    "//mojo/shell/public/cpp:sources",
    "//mojo/shell/runner:init",
    "//mojo/shell/standalone:lib",
  ]
}

source_set("main") {
  sources = [
    "background_shell_main.cc",
    "background_shell_main.h",
  ]
  deps = [
    "//base",
    "//mojo/message_pump",
    "//mojo/shell",
    "//mojo/shell/public/cpp:sources",
    "//mojo/shell/runner:init",
    "//mojo/shell/runner/common",
    "//mojo/shell/runner/host:lib",
    "//mojo/shell/standalone:lib",
  ]
}
