# Remove expired repository/package signing key (7B8B44A1), if present.
remove_old_rpm_key() {
  rpm -q gpg-pubkey-7b8b44a1 >/dev/null 2>&1
  if [ "$?" -eq "0" ]; then
    rpm -e gpg-pubkey-7b8b44a1 >/dev/null 2>&1
  fi
}

