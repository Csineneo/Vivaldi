    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/tab_strip_height" >

   <GridView
      android:id="@+id/interests_list_view"
