[
  {
    "namespace": "settings",
    "description": "Use the <code>chrome.settings</code> to change settings.",
    "types": [
      {
        "id": "preferenceTypeEnum",
        "type": "string",
        "description": "Type of setting value. Defaults to |boolean|.",
        "enum": [ "boolean", "string", "number", "array" ]
      },
      {
        "id": "PreferenceItem",
        "type": "object",
        "description": "PreferenceItem.",
        "properties": {
          "preferenceKey": {
            "type": "string",
            "description": "Preference key name."
          },
          "preferenceValue": {
            "type": "object",
            "description": "Preference value.",
            "properties": {
              "boolean": { "optional": true, "type": "boolean" },
              "string": { "optional": true, "type": "string" },
              "number": { "optional": true, "type": "number" },
              "array": {
                "items": { "type": "string" },
                "optional": true,
                "type": "array"
              }
            }
          },
          "preferenceType": { "$ref": "preferenceTypeEnum"}
        }
      }
    ],
    "functions": [
      {
        "name": "togglePreference",
        "type": "function",
        "description": "Toggle preference setting.",
        "parameters": [
          {
            "type": "string",
            "name": "value"
          },
          {
            "type": "function",
            "name": "callback",
            "optional": true,
            "parameters": [
              {
                "name": "newValue",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getPreference",
        "type": "function",
        "description": "Get a batch of settings, see SettingsGetPreferenceFunction::RunAsync()",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "optional": true,
            "parameters": [
              {
                "name": "results",
                "type": "array",
                "items": { "$ref": "PreferenceItem" }
              }
            ]
          }
        ]
      },
      {
        "name": "setPreference",
        "type": "function",
        "description": "Set a specific preference.",
        "parameters": [
          {
            "name": "preference",
            "$ref": "PreferenceItem"
          }
        ]
      }

    ]
  }
]
