    # Add unit_tests target here.
    "//ios/chrome/app:unit_tests",
    "//ios/chrome/app/application_delegate:unit_tests",
    "//ios/chrome/browser:unit_tests",
    "//ios/chrome/browser/browsing_data:unit_tests",
