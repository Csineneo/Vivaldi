}

update_target("//ui/base:base") {
  sources += [
    "//vivaldi/ui/base/vivaldi_simple_menu_model.cc",
  ]
}

if (!is_android) {
  update_target("//ui/views:views") {
    sources += [
      "//vivaldi/ui/views/vivaldi_menu_model_adapter.cc",
    ]
  }
}

if (is_win) {
  update_target("//ui/base:base") {
    sources += [
      "//vivaldi/ui/dragging/custom_drag_source_win.cc",
