      ],
      [
        "//components/strings:components_strings",
        "//vivaldi/app/resources/components_strings/vivaldi_components_strings.grd",
        {
          translation_dir_setting = "strings"
        },
      ],
      [
        "//components/strings:components_chromium_strings",
