{
  "documentation": "http://wiki.viv.int/doku.php?id=prefs_system",
  "vivaldi": {
    "address_bar": {
      "autocomplete": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "syncable": true
        },
        "tld": {
          "type": "string",
          "default": "com",
          "syncable": true
        },
        "prefer_bookmarks": {
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      },
      "omnibox": {
        "cutcopy_encoded": {
          "description": "URL encode the string passed to the clipboard from the url field",
          "type": "boolean",
          "default": false,
          "syncable": true
        },
        "enabled": {
          "type": "boolean",
          "default": true,
          "syncable": true
        },
        "show_bookmarks": {
          "type": "boolean",
          "default": true,
          "syncable": true
        },
        "show_typed_history": {
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      },
      "position": {
        "type": "enum",
        "enum_values": {
          "top": 0,
          "bottom": 1
        },
        "default": "top",
        "syncable": true
      },
      "select_on_click": {
        "description": "Select the content of the URL field when it gets activated",
        "type": "boolean",
        "default": true,
        "syncable": true
      },
      "show_progress": {
        "type": "boolean",
        "default": true,
        "syncable": true
      },
      "url_open_shortcut": {
        "description": "Which modifier key to use for opening the url in a new tab",
        "type": "enum",
        "enum_values": {
          "alt": 0,
          "shift": 1
        },
        "default": "alt",
        "syncable": true
      }
    },
    "bookmarks": {
      "bar": {
        "sorting": {
          "type": "dictionary",
          "default": {"sortOrder": 1, "sortField": "manually"},
          "syncable": true
        },
        "display": {
          "type": "enum",
          "enum_values": {
            "default": 0,
            "text": 1,
            "icon": 2,
            "iconexceptfolders": 3
          },
          "default": "default",
          "syncable": true
        },
        "folder_ids": {
          "type": "list",
          "default": ["1"],
          "syncable": false
        },
        "position": {
          "type": "enum",
          "enum_values": {
            "top": 0,
            "bottom": 1
          },
          "default": "top",
          "syncable": true
        },
        "visible": {
          "type": "boolean",
          "default": false,
          "syncable": true
        }
      },
      "manager": {
        "sorting": {
          "type": "dictionary",
          "default": {"sortOrder": 1, "sortField": "manually"},
          "syncable": true
        }
      },
      "open_in_new_tab": {
        "type": "boolean",
        "default": false,
        "syncable": true
      },
      "panel": {
        "sorting": {
          "type": "dictionary",
          "default": {"sortOrder": 1, "sortField": "manually"},
          "syncable": true
        }
      }
    },
    "calendar": {
      "date_format": {
        "type": "string",
        "default": "",
        "syncable": false
      }
    },
    "dot_net": {
      "username": {
        "type": "string",
        "default": "",
        "syncable": false
      }
    },
    "homepage": {
      "type": "string",
      "default": "https://vivaldi.com",
      "syncable": true
    },
    "history": {
      "days_to_keep_visits": {
        "type": "integer",
        "default": 91,
        "syncable": true
      }
    },
    "incognito": {
      "show_intro": {
        "type": "boolean",
        "default": true,
        "syncable": true
      }
    },
    "mouse_gestures": {
      "alt_gestures_enabled": {
        "description": "Allow gestures using Alt key and left mouse button",
        "type": "boolean",
        "default": false,
        "syncable": true
      },
      "enabled": {
        "type": "boolean",
        "default": true,
        "syncable": true
      },
      "rocker_gestures": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      }
    },
    "plugins": {
      "widevine": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      }
    },
    "settings": {
      "size": {
        "width": {
          "type": "integer",
          "default": 960,
          "syncable": false
        },
        "height": {
          "type": "integer",
          "default": 800,
          "syncable": false
        },
        "top": {
          "type": "integer",
          "default": -1,
          "syncable": false
        },
        "left": {
          "type": "integer",
          "default": -1,
          "syncable": false
        }
      }
    },
    "startpage": {
      "image": {
        "type": "file_path",
        "default": "./../resources/bg.jpg",
        "syncable": false
      },
      "speed_dial": {
        "display_navigation": {
          "description": "Controls Speed Dial navigation display on manager pages",
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      }
    },
    "sync": {
      "active": {
        "type": "boolean",
        "default": false,
        "syncable": false
      },
      "is_using_separate_encryption_password": {
        "type": "enum",
        "enum_values": {
          "unknown": 0,
          "aye": 1,
          "nay": 2
        },
        "default": "unknown",
        "syncable": false
      },
      "username": {
        "type": "string",
        "default": "",
        "syncable": false
      }
    },
    "tabs": {
      "always_load_pinned_after_restore": {
        "type": "boolean",
        "default": true,
        "syncable": true
      },
      "defer_loading_after_restore": {
        "type": "boolean",
        "default": true,
        "syncable": true
      }
    },
    "theme": {
      "window_background_accent_color_blend": {
        "type": "boolean",
        "default": true,
        "syncable": false
      },
      "window_background_image_url": {
        "type": "string",
        "syncable": false,
        "default": "../resources/triangles_pattern_vivaldi.png"
      },
      "window_background_image_scaling": {
        "type": "enum",
        "enum_values": {
          "scale": 0,
          "repeat": 1
        },
        "default": "repeat",
        "syncable": false
      },
      "window_background_image_enabled": {
        "type": "boolean",
        "default": false,
        "syncable": false
      }
    },
    "webpages": {
      "capture": {
        "directory": {
          "description": "The location where captured pages are stored",
          "type": "file_path",
          "default": null,
          "syncable": false
        },
        "compression_format": {
          "type": "enum",
          "enum_values": {
            "png": 0,
            "jpg": 1
          },
          "default": "png",
          "syncable": true
        },
        "capture_mode": {
          "type": "enum",
          "enum_values": {
            "fullpage": 0,
            "area": 1
          },
          "default": "fullpage",
          "syncable": true
        },
        "save_location": {
          "type": "enum",
          "enum_values": {
            "file": 0,
            "clipboard": 1
          },
          "default": "file",
          "syncable": true
        }
      },
      "focus_trap": {
        "type": "boolean",
        "default": true,
        "description": "true if the focus trap disabling tab cycling from web pages into the UI is enabled, otherwise false to allow it.",
        "syncable": true
      },
      "full_screen": {
        "hide_mouse": {
          "type": "boolean",
          "default": null,
          "default_win": true,
          "default_linux": true,
          "syncable": true
        }
      },
      "smooth_scrolling": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "default_mac": false,
          "syncable": true
        }
      },
      "tab_focuses_links": {
        "type": "boolean",
        "default": false,
        "syncable": true
      },
      "tab_zoom": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "syncable": true
        }
      }
    },
    "welcome": {
      "seen_pages": {
        "type": "list",
        "default": [],
        "description": "Welcome pages marked as seen",
        "syncable": false
      },
      "read_pages": {
        "type": "list",
        "default": [],
        "description": "Welcome pages marked as consumed",
        "syncable": false
      }
    },
    "windows": {
      "use_native_decoration": {
        "type": "boolean",
        "default": false,
        "syncable": true
      },
      "size_cache": {
        "type": "dictionary",
        "default": {
          "width": 1200,
          "height": 700
        },
        "syncable": false
      }
    },

    "system": {
      "has_desktop_wallpaper_protocol": {
        "type": "boolean",
        "default": null,
        "default_linux": false,
        "default_mac": false,
        "syncable": false
      },
      "mac": {
        "action_on_double_click": {
          "type": "string",
          "default": null,
          "syncable": false
        },
        "aqua_color_variant": {
          "type": "integer",
          "default": null,
          "syncable": false
        },
        "interface_style": {
          "type": "integer",
          "default": null,
          "syncable": false
        },
        "keyboard_ui_mode": {
          "type": "integer",
          "default": null,
          "syncable": false
        },
        "swipe_scroll_direction": {
          "type": "boolean",
          "default": null,
          "syncable": false
        }
      }
    }
  },

  "chromium": {
    "kCredentialsEnableService": "credentials_enable_service",
    "kDownloadDefaultDirectory": "download.default_directory",
    "kEnableDoNotTrack": "enable_do_not_track",
    "kExtensionURLOverrides": "extensions.chrome_url_overrides",
    "kPluginsAlwaysOpenPdfExternally": "plugins.always_open_pdf_externally",
    "kSafeBrowsingEnabled": "safebrowsing.enabled",
    "kURLsToRestoreOnStartup": "session.startup_urls",
    "kWebKitCursiveFontFamily": "webkit.webprefs.fonts.cursive.Zyyy",
    "kWebKitFantasyFontFamily": "webkit.webprefs.fonts.fantasy.Zyyy",
    "kWebKitFixedFontFamily": "webkit.webprefs.fonts.fixed.Zyyy",
    "kWebKitMinimumFontSize": "webkit.webprefs.minimum_font_size",
    "kWebKitSansSerifFontFamily": "webkit.webprefs.fonts.sansserif.Zyyy",
    "kWebKitSerifFontFamily": "webkit.webprefs.fonts.serif.Zyyy",
    "kWebKitStandardFontFamily": "webkit.webprefs.fonts.standard.Zyyy",
    "kWebRTCIPHandlingPolicy": "webrtc.ip_handling_policy"
  },

  "chromium_local": {
    "kHardwareAccelerationModeEnabled": "hardware_acceleration_mode.enabled"
  }
}
